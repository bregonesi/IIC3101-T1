<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "PUCNN", root_path, id: "logo", class: "navbar-brand" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      	<li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= user_signed_in? && (current_user.name + " " + current_user.last_name) || "Login" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <% if !user_signed_in? %>
                <%= bootstrap_form_for(:user, :url => session_path(:user), :html => {:class => 'col-xs-12'}) do |f| %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", hide_label: true %>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", hide_label: true %>
                  <%= f.check_box :remember_me %>
                  <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
                <% end %>
              <% else %>
                <%= link_to "News list", news_list_path %>
                <div role="separator" class="divider"></div>
                <%= link_to "Add user", new_user_registration_path %>
                <%= link_to "Users list", users_path %>
                <%= link_to "Edit my profile", edit_user_registration_path %>
                <div role="separator" class="divider"></div>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %>
              <% end %>
            </li>
          </ul>
      	</li>
      </ul>
    </nav>
  </div>
</header>
